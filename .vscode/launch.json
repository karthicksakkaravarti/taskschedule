            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "celery",
                "beat",
                "--loglevel=info"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Celery: Flower",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "celery",
                "flower",
                "--port=5555"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Django: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "test",
                "--keepdb",
                "--verbosity=2"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Django: Run Specific Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "test",
                "${input:testPath}",
                "--keepdb",
                "--verbosity=2"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/taskschedule",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "port",
            "description": "Enter port number",
            "default": "8000",
            "type": "promptString"
        },
        {
            "id": "testPath",
            "description": "Enter test path (e.g., users.tests.test_models)",
            "default": "",
            "type": "promptString"
        },
        {
            "id": "debugMode",
            "description": "Enable Debug Mode?",
            "type": "pickString",
            "options": [
                "True",
                "False"
            ],
            "default": "True"
        },
        {
            "id": "secretKey",
            "description": "Enter Django Secret Key (leave empty for default)",
            "default": "",
            "type": "promptString"
        },
        {
            "id": "databaseUrl",
            "description": "Enter Database URL (leave empty for default)",
            "default": "",
            "type": "promptString"
        },
        {
            "id": "redisUrl",
            "description": "Enter Redis URL (leave empty for default)",
            "default": "redis://localhost:6379/0",
            "type": "promptString"
        },
        {
            "id": "emailHost",
            "description": "Enter Email Host (leave empty for default)",
            "default": "localhost",
            "type": "promptString"
        },
        {
            "id": "customVar",
            "description": "Enter any custom environment variable value",
            "default": "",
            "type": "promptString"
        }
    ]
}
