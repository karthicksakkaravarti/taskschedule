            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Django: Create Superuser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "createsuperuser"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Celery: Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "celery",
                "worker",
                "--loglevel=info",
                "--concurrency=1"
