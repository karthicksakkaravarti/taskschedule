{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Development Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "runserver"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "django": true,
            "autoReload": {
                "enable": true
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Django: Run with Custom Environment",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:${input:port}"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "django": true,
            "autoReload": {
                "enable": true
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
