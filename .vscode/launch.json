            "args": [
                "shell"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Django: Migrate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/taskschedule/manage.py",

            "args": [
                "migrate"
            ],
            "envFile": "${workspaceFolder}/taskschedule/.envs/.local/.django",
            "cwd": "${workspaceFolder}/taskschedule",
